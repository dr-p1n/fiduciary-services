# AGENTTA Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# API Configuration
# ===================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=false

# ===================
# Database
# ===================
DATABASE_URL=postgresql://agentta:password@localhost:5432/agentta_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ===================
# Redis & Celery
# ===================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===================
# AI Services
# ===================
# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI (optional fallback)
OPENAI_API_KEY=your_openai_api_key_here

# ===================
# Security
# ===================
# Generate a strong secret key for JWT tokens
SECRET_KEY=your_secret_key_here_use_openssl_rand_hex_32

# Encryption master key
ENCRYPTION_MASTER_KEY=your_encryption_master_key_here

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ===================
# Email Configuration
# ===================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@agentta.com

# ===================
# Application Settings
# ===================
APP_NAME=AGENTTA
APP_VERSION=0.1.0
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/agentta.log

# ===================
# Feature Flags
# ===================
ENABLE_AI_PROCESSING=true
ENABLE_EMAIL_INTEGRATION=true
ENABLE_CALENDAR_SYNC=true
ENABLE_DOCUMENT_OCR=false

# ===================
# Rate Limiting
# ===================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ===================
# File Storage
# ===================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,docx,doc,txt,xlsx,xls,msg,eml

# ===================
# Monitoring
# ===================
SENTRY_DSN=
ENABLE_METRICS=true
METRICS_PORT=9090
